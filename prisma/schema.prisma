// prisma/schema.prisma
datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id      String  @id @db.Uuid
  name    String  @db.Text
  email   String  @unique @db.Text
  isCoach Boolean @default(false)

  modules         Module[]        @relation("UserModules")
  ownedWeeks      ScheduleWeek[]  @relation("CoachWeeks")
  athleteWeeks    ScheduleWeek[]  @relation("AthleteWeeks")
  athleteComments ModuleComment[] @relation("ModuleCommentAthlete")
  coachComments   ModuleComment[] @relation("ModuleCommentCoach")

  @@map("user")
}

model Module {
  id BigInt @id @default(autoincrement()) @db.BigInt

  ownerId String @map("owner") @db.Uuid
  owner   User   @relation("UserModules", fields: [ownerId], references: [id])

  name            String  @db.Text
  category        String  @db.Text
  subCategory     String? @db.Text
  distance        Int?
  durationSeconds Int?
  durationMinutes Int?
  weight          Int?
  description     String? @db.Text

  scheduleDays ScheduleDay[]

  comments ModuleComment[] @relation("ModuleToComment")

  @@map("module")
}

// One week, for one athlete, owned by one coach
model ScheduleWeek {
  id BigInt @id @default(autoincrement()) @db.BigInt

  ownerId String @map("owner") @db.Uuid
  owner   User   @relation("CoachWeeks", fields: [ownerId], references: [id])

  athleteId String @map("athlete") @db.Uuid
  athlete   User   @relation("AthleteWeeks", fields: [athleteId], references: [id])

  week  Int
  title String @default("") @db.Text

  days ScheduleDay[]

  @@map("scheduleWeek")
}

model ScheduleDay {
  id  BigInt @id @default(autoincrement()) @db.BigInt
  day Int

  // Foreign key to the week this day belongs to
  weekId BigInt?       @db.BigInt
  week   ScheduleWeek? @relation(fields: [weekId], references: [id])

  // Relation: a day has a list of modules (many-to-many)
  modules Module[]

  @@map("scheduleDay")
}

model ModuleComment {
  id        BigInt   @id @default(autoincrement()) @db.BigInt

  moduleId  BigInt   @db.BigInt
  athleteId String   @db.Uuid
  coachId   String   @db.Uuid

  body      String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  module  Module @relation("ModuleToComment", fields: [moduleId], references: [id])
  athlete User   @relation("ModuleCommentAthlete", fields: [athleteId], references: [id])
  coach   User   @relation("ModuleCommentCoach", fields: [coachId], references: [id])

  @@map("moduleComment")
  @@index([moduleId])
  @@index([athleteId])
  @@index([coachId])
}
