// prisma/schema.prisma
datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

generator client {
  provider = "prisma-client-js"
}

/// Defines the user's role for access control.
enum UserRole {
  ADMIN
  COACH
  ATHLETE
}

/// Training module focus areas surfaced in the UI.
enum ModuleFocus {
  STRENGTH
  CONDITIONING
  MOBILITY
  MINDSET
  RECOVERY
}

/// How challenging a module is intended to be.
enum ModuleIntensity {
  LOW
  MODERATE
  HIGH
}

/// Athlete readiness states shown in dashboards.
enum AthleteStatus {
  GREEN
  YELLOW
  RED
}

model User {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  role       UserRole
  dateJoined DateTime @default(now()) @map("date_joined")

  groupId String? @map("group_id")
  group   Group?  @relation(fields: [groupId], references: [id])

  createdModules   TrainingModule[]
  createdSchedules TrainingSchedule[]

  @@map("users")
}

model Group {
  id   String @id @default(uuid())
  name String @unique

  athletes  Athlete[]
  schedules TrainingSchedule[]
  users     User[]

  @@map("groups")
}

model Athlete {
  id        String        @id @default(uuid())
  name      String
  sport     String
  program   String
  readiness Int
  status    AthleteStatus @default(GREEN)

  groupId String? @map("group_id")
  group   Group?  @relation(fields: [groupId], references: [id])

  assignments ScheduleAssignment[]

  @@map("athletes")
}

model TrainingModule {
  id              String          @id @default(uuid())
  title           String
  focus           ModuleFocus
  intensity       ModuleIntensity
  durationMinutes Int             @map("duration_minutes")
  description     String

  createdById String? @map("created_by_id")
  createdBy   User?   @relation(fields: [createdById], references: [id])

  scheduledModules ScheduledModule[]

  @@map("training_modules")
}

model TrainingSchedule {
  id        String    @id @default(uuid())
  title     String
  startDate DateTime? @map("start_date")

  groupId String? @map("group_id")
  group   Group?  @relation(fields: [groupId], references: [id])

  createdById String? @map("created_by_id")
  createdBy   User?   @relation(fields: [createdById], references: [id])

  days        TrainingDay[]
  assignments ScheduleAssignment[]

  @@map("training_schedules")
}

model TrainingDay {
  id         String           @id @default(uuid())
  dayOfWeek  String           @map("day_of_week")
  scheduleId String           @map("schedule_id")
  schedule   TrainingSchedule @relation(fields: [scheduleId], references: [id])

  modules ScheduledModule[]

  @@unique([scheduleId, dayOfWeek])
  @@map("training_days")
}

model ScheduledModule {
  id       Int     @id @default(autoincrement())
  position Int     @default(0)
  notes    String?

  dayId String      @map("day_id")
  day   TrainingDay @relation(fields: [dayId], references: [id])

  moduleId String         @map("module_id")
  module   TrainingModule @relation(fields: [moduleId], references: [id])

  @@unique([dayId, position])
  @@map("scheduled_modules")
}

model ScheduleAssignment {
  id         Int    @id @default(autoincrement())
  scheduleId String @map("schedule_id")
  athleteId  String @map("athlete_id")

  schedule TrainingSchedule @relation(fields: [scheduleId], references: [id])
  athlete  Athlete          @relation(fields: [athleteId], references: [id])

  @@unique([scheduleId, athleteId])
  @@map("schedule_assignments")
}
